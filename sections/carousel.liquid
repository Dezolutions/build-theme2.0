{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'carousel.css' | asset_url | stylesheet_tag }}

<section class="hero">
  <h1 class="hero__title">{{section.settings.carousel_title}}</h1>
  <div class="swiper">
    
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <a class="swiper-slide__link" href="{{block.settings.slide_link}}">
            <div class="link-banner">
              <p class="link-banner__item">{{ 'general.slider.click_slide' | t }} {{block.settings.carousel_text}}</p>
            </div>
            <p class="swiper-slide__text">{{block.settings.carousel_text}}</p>
            <img class="swiper-slide__img" src="{{block.settings.carousel_image | img_url: '1050x' }}"  alt="slide img">
          </a>
        </div>
      {% endfor %}
    </div>

    <!-- pagination -->
    <div class="swiper-pagination"></div>

    <!-- navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>

  </div>
</section>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
<script src="{{ 'swiper.js' | asset_url }}"></script>

{% schema %}
{
  "name": "Carousel Images",
  "settings": [
    {
      "type": "header",
      "content":"Carousel option"
    },
    {
      "type":"text",
      "id":"carousel_title",
      "label":"Carousel title",
      "default":"Carousel main title"
   }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "carousel_image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "slide_link",
          "label": "Slide link"
        },
        {
          "type": "text",
          "id": "carousel_text",
          "label": "Slide text"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "category",
      "name":"Carousel Images",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ],
  "templates": ["index"]
}
{% endschema %}