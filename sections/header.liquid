{{'nav.css' | asset_url | stylesheet_tag }}

  
    
  

<header class="header">
  <div class="header__wrapper">
    <div class="burger-menu">
      <input type="checkbox" id="menu_checkbox">
      <label class="menu-checkbox__label" for="menu_checkbox">
        <div></div>
        <div></div>
        <div></div>
      </label>
    </div>
    <nav>
      <ul class="header__menu-mobile">
        {% for link in linklists.main-menu.links %}
          <li class="header__menu-item {% if link.active %}active{% endif %}">
            {% if link.links == blank %}
              <a class="header__item-link" href="{{ link.url }}"><span>{{ link.title }}</span> {% if link.links != blank %}<span class="icon-caret__main" >{% render 'icon-caret' %}</span>{%endif%}</a>
            {%endif%}
            {% if link.links != blank %}
              <p class="header__item-link submenu-open"><span>{{ link.title }}</span> {% if link.links != blank %}<span class="icon-caret__main" >{% render 'icon-caret' %}</span>{%endif%}</p>
              <ul class="submenu-mobile">
                
                {% for child_link in link.links %}  
                  <li class="header__submenu-item {% if child_link.active %}child-active{% endif %}"  >
                    {% if child_link.links == blank %}
                      <a class="header__item-link" href= "{{ child_link.url }}"><span>{{ child_link.title }}</span> {% if child_link.links != blank %}<span class="icon-caret__main">{% render 'icon-caret' %}</span>{%endif%}</a>
                    {%endif%}
                    {% if child_link.links != blank %}
                      <p class="header__item-link second-submenu-open"><span>{{ child_link.title }}</span> {% if child_link.links != blank %}<span class="icon-caret__main">{% render 'icon-caret' %}</span>{%endif%}</p>
                      <ul class="second-submenu-mobile">
                      {% for grandchild_link in child_link.links %}  
                        <li class="header__submenu-second__item {% if grandchild_link.active %}child-active{% endif %}">
                          <a class="header__item-link" href= "{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                        </li>
                      {% endfor %}
                      </ul>
                    {% endif %}   
                  </li>
                {% endfor %}
    
              </ul> 
            {% endif %} 
    
          </li>
        {% endfor %}
      </ul>
    </nav>
    <nav>
      <ul class="header__menu">
        {% for link in linklists.main-menu.links %}
          <li class="header__menu-item {% if link.active %}active{% endif %}">
            {% if link.links == blank %}
              <a class="header__item-link" href="{{ link.url }}"><span>{{ link.title }}</span> {% if link.links != blank %}<span class="icon-caret__main" >{% render 'icon-caret' %}</span>{%endif%}</a>
            {%endif%}
            {% if link.links != blank %}
              <p class="header__item-link submenu-open" href="{{ link.url }}"><span>{{ link.title }}</span> {% if link.links != blank %}<span class="icon-caret__main" >{% render 'icon-caret' %}</span>{%endif%}</p>
              <ul class="header__submenu">
                {% for child_link in link.links %}  
                  <li class="header__submenu-item {% if child_link.active %}child-active{% endif %}"  >
                    {% if child_link.links == blank %}
                      <a class="header__item-link" href= "{{ child_link.url }}"><span>{{ child_link.title }}</span> {% if child_link.links != blank %}<span class="icon-caret__span">{% render 'icon-caret' %}</span>{%endif%}</a>
                    {%endif%}
                    {% if child_link.links != blank %}
                      <p class="header__item-link second-submenu-open" href= "{{ child_link.url }}"><span>{{ child_link.title }}</span> {% if child_link.links != blank %}<span class="icon-caret__span">{% render 'icon-caret' %}</span>{%endif%}</p>
                      <ul class="header__submenu-second">
                      {% for grandchild_link in child_link.links %}  
                        <li class="header__submenu-second__item {% if grandchild_link.active %}child-active{% endif %}">
                          <a class="header__item-link" href= "{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                        </li>
                      {% endfor %}
                      </ul>
                    {% endif %}   
                  </li>
                {% endfor %}
    
              </ul> 
            {% endif %} 
    
          </li>
        {% endfor %}
        </ul>
    </nav>
  </div>
</header>

<script src="{{ 'burger-menu.js' | asset_url }}"></script>